        <script>
          async function  addToCart(proId){
            const response = await axios.get(`http://localhost:3000/addToCart?proId=${proId}`)
            .then((response)=>{
                if(response.data.success){
                     Swal.fire({
        icon: 'success',
        title: 'Success',
        showConfirmButton: false,
        timer: 1300,
        text: response.data.message
      });
                }else{
                    Swal.fire({
        icon: 'info',
        title: 'Already in Cart',
        showConfirmButton: false,
        timer: 1300,
        text: response.data.message
      })
                    
                }




            })
          }
        </script>