<%-include('../layouts/header')-%>
      
  <!-- Spinner Start -->
  <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->

<!-- 404 Start -->
<div class="container-fluid py-5">
    <div class="container py-5 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <i class="bi bi-exclamation-triangle display-1 text-secondary"></i>
                <h1 class="display-1">OOPS,</h1>
                <h1 class="mb-4">Something went Wrong</h1>
                <p class="mb-4"> It seems like there was an unexpected issue while processing your request. Our team is already on it, working hard to fix the problem. Please try again later or contact our support team for assistance. We apologize for any inconvenience this may have caused and appreciate your patience.</p>
                <a class="btn border-secondary rounded-pill py-3 px-5" href="/customerHome">Go Back To Home</a>
                <% if (locals.message) { %>
                    <span style="color: red;">
                      <%= message %>
                    </span>
                  <% } %>
            </div>
        </div>
    </div>
</div>
<!-- 404 End -->



