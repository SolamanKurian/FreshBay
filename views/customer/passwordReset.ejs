        <div class="col-lg-6"> <!-- Registration form -->
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Reset Password</h3>
                    
                        <form id="signupForm" method="POST" action="/password_reset" class="needs-validation" novalidate>

                       
                             <!-- getting email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>
                        <label for="otp" class="form-label text-danger" ><% if(locals.message){%>
                            <%=message%>
                            <%}%>
                            </label>

                        <button type="submit" class="btn btn-primary w-100">Get OTP</button>
                    </form>
                
                </div>
            </div>
        </div>
        <!-- registration form end -->
    </div>
</div>



       <%-include('../layouts/footer')-%>
       <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
       <script>
        
        (function () {
            'use strict';
            
            var forms = document.querySelectorAll('.needs-validation');
    
           
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
    
                        form.classList.add('was-validated');
                    }, false);
                });
        })();


                        

    document.getElementById('email').addEventListener('input', function () {
        var emailInput = document.getElementById('email');
        var emailValue = emailInput.value.trim();

        if (emailValue.endsWith('.com')) {
            emailInput.setCustomValidity('');
        } else {
            emailInput.setCustomValidity('Email address must end with ".com"');
        }
    });

    </script>