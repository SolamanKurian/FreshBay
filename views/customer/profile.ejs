



<%-include('../layouts/header')-%>
<%-include('../layouts/logednavbar')-%><br>
<br>
<br>
<br><div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <!-- User Profile Information -->
                    <div class="text-center mb-4">
                        <h3 class="mt-3"><%=customer.Name%></h3>
                        <p>Email:<%=customer.Email%></p>
                        <p>Phone:<%=customer.Phone%></p>
                    </div>

                    <!-- Profile Links -->
                    <div class="row justify-content-center">
                        <div class="col-md-6 mb-3">
                            <a href="/address/manageAddress" class="btn btn-primary w-100">Manage Address</a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="/editProfile" class="btn btn-primary w-100">Edit Profile</a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="/order/myOrders" class="btn btn-primary w-100">My Orders</a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="/wallet/walletPage" class="btn btn-primary w-100">Wallet</a>
                        </div>
                        <%if(customer.Password){%>
                        <div class="col-md-6 mb-3">
                            <a href="/changePassword" class="btn btn-primary w-100">Change Password</a>
                        </div>
                        <%}%>
                        <div class="col-md-6 mb-3">
                            <button id="copyLinkBtn" class="btn btn-secondary w-100">Copy Referral Link</button>
                            <input type="text" id="referralLink" value="https://freshbay.online/register?referal=<%= customer.Referal %>" readonly style="position: absolute; left: -9999px;">
                        </div>
                        <div class="col-md-6">
                            <a href="/signout" class="btn btn-danger w-100">Sign Out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%-include('../layouts/footer')-%>
<script>
    document.getElementById('copyLinkBtn').addEventListener('click', function() {
        var copyText = document.getElementById('referralLink');
        copyText.style.display = 'block'; 
        copyText.select();
        copyText.setSelectionRange(0, 99999); 
        document.execCommand('copy');
        copyText.style.display = 'none'; 
        alert('Referral link copied to clipboard!');
    });
</script>