                <%}%>
                <form class="forms-sample" action="" method="POST">
                  <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    
                    <input type="text" class="form-control" id="name" name="name" pattern="[A-Za-z ]+" title="Please enter letters and spaces only" required>
                  </div>
                 
                  
                
                  <button type="submit" class="btn btn-gradient-success mr-2">Add+</button>
                  <button onclick="location.href='/product/category'" class="btn btn-light">Cancel</button>
                </form>
              </div>
